package com.cibertec.app.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;


import com.cibertec.app.entity.Inventario;
import com.cibertec.app.service.InventarioService;

@Controller
public class InventarioController {

	@Autowired
	private InventarioService inventarioService;

	@GetMapping("/")
	public String Inventario(Model model) {
	    model.addAttribute("inventario", inventarioService.getAllInventario());
	    return "inventario/index";
	}  
	    
	@GetMapping("/inventario/edit/{id}")
	public String editInventatio(@PathVariable Integer id, Model model) {
	    Inventario in = inventarioService.findInventarioById(id);
	    model.addAttribute("inventario", in);
	    return "inventario/edit";
	}
		
	@PostMapping("/index/{id}")
	public String updateCliente(@PathVariable Integer id, 
	    @ModelAttribute("inventario") Inventario inventario, Model model) {
	    //sacar el estudiante de la b.d. por el id
	    Inventario existentInventario = inventarioService.findInventarioById(id);
	    // cargarlo
	    existentInventario.setNroInventario(id);
	    existentInventario.setFecha(inventario.getFecha());
	    existentInventario.setCostoIngreso(inventario.getCostoIngreso());
	    existentInventario.setIdProd(inventario.getIdProd());
	    
	    // guardar el estudiante actualizado
	    inventarioService.updateInventario(existentInventario);
	    return "redirect:/inventario";
	}   
	
	
	 
	
	
}
